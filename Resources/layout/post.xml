<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    app:cardElevation="4dp"
    app:contentPaddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:clickable="true"
            android:id="@+id/postImage"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/photo"
            android:layout_width="match_parent"
            android:layout_height="143dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="James Bond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/postBodyTextView"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:maxLines="4"
                android:text="Lorem ipsum dolor sit amet, ad suas nominavi recteque mea. Eos nominavi conclusionemque an, eu his rebum dicit volutpat, no homero ubique est. Cum ne dicta ponderum."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="10dp"
                android:background="@color/lightash"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/likeButton"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/like"
                    android:layout_width="26dp"
                    android:layout_height="26dp"/>

                <ImageView
                    android:id="@+id/commentButton"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/likeButton"
                    android:src="@drawable/comment"
                    android:layout_width="26dp"
                    android:layout_height="26dp"/>

                <TextView
                    android:id="@+id/likeText"
                    android:layout_centerVertical="true"
                    android:text="21 Likes"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
