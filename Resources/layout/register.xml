<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_weight="0.20"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <ImageView
        android:layout_centerInParent="true"
        android:src="@drawable/facepost"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical" 
        android:layout_weight="0.80"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:theme="@style/AppBlue"
            android:id="@+id/fullNameRegtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:theme="@style/AppBlue"
                android:textSize="18sp"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"
                android:hint="Full Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:theme="@style/AppBlue"
            android:id="@+id/emailRegText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:theme="@style/AppBlue"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/AppBlue"
            android:id="@+id/passwordRegText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:theme="@style/AppBlue"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:textSize="18sp"
                android:hint="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:theme="@style/AppBlue"
            android:id="@+id/confirmPasswordRegText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:theme="@style/AppBlue"
                android:inputType="textPassword"
                android:imeOptions="actionGo"
                android:textSize="18sp"
                android:hint="Confirm password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/roundbutton"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/registerButton"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false"
            android:text="Register"
            android:layout_marginTop="40dp"
            android:layout_width="275dp"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/clickToLogin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Click here to Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
